{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			".react-router",
			"vite.config.ts",
			"root.tsx",
			"routes.ts",
			"react-router.config.ts",
			"api/"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"style": {
				"noDefaultExport": "off",
				"noNamespaceImport": "off"
			},
			"correctness": {
				"useImportExtensions": "off"
			},
			"suspicious": {
				"noReactSpecificProps": "off"
			}
		}
	},
	"javascript": {
		"globals": ["React"],
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
